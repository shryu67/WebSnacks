@model IEnumerable<WebSnack.Models.z_bas_goods>

@{
    ViewBag.Title = "Home Page";
}



@*輪播*@
<link rel="stylesheet" type="text/css" href="@Url.Content("~/easyslick-1.8.1/slick/slick.css")">
<link rel="stylesheet" type="text/css" href="@Url.Content("~/easyslick-1.8.1/slick/slick-theme.css")">
<style type="text/css">

    html, body {
        margin: 0;
        padding: 0;
    }

    * {
        box-sizing: border-box;
    }

    .slider {
        width: 50%;
        margin: 100px auto;
    }

    .slick-slide {
        margin: 0px 20px;
    }

        .slick-slide img {
            width: 100%;
        }

    .slick-prev:before,
    .slick-next:before {
        color: black;
    }


    .slick-slide {
        transition: all ease-in-out .3s;
        opacity: .2;
    }

    .slick-active {
        opacity: .5;
    }

    .slick-current {
        opacity: 1;
    }
</style>

<section class="regular slider">
    <div>
        <img src="~/img/goods/candy05.jpg" class="img-responsive">
    </div>
    <div>
        <img src="~/img/goods/candy06.jpg" class="img-responsive">
    </div>
    <div>
        <img src="~/img/goods/choco05.jpg" class="img-responsive">
    </div>
    <div>
        <img src="~/img/goods/choco06.jpg" class="img-responsive">
    </div>
    <div>
        <img src="~/img/goods/cookie05.jpg" class="img-responsive">
    </div>
    <div>
        <img src="~/img/goods/cookie06.jpg" class="img-responsive">
    </div>
</section>

@*<script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>*@
<script src="@Url.Content("~/easyslick-1.8.1/slick/slick.js")" type="text/javascript" charset="utf-8"></script>
<script type="text/javascript">
    $(document).on('ready', function () {

        $(".regular").slick({
            dots: true,
            infinite: true,
            slidesToShow: 3,
            slidesToScroll: 3
        });

    });</script>


@*輪播結束*@


<!-- Section: services -->
<section id="service" class="home-section color-dark bg-gray">
    <div class="container marginbot-50">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <div>
                    <div class="section-heading text-center">
                        <h2 class="h-bold">What we can do for you</h2>
                        <div class="divider-header"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="text-center">
        <div class="container">
            <div class="row animatedParent">
                @foreach (var item in Model)
                {
                    <a href="@Url.Action("GoodsDetail","Home",new { mno = item.mno})">
                        <div class="col-md-4 col-sm-6 margintop-20">
                            <div class="animated rotateInDownLeft">
                                <div class="service-box">
                                    <div class="service-icon">
                                        <img src="~/img/goods/@item.mimg" style="width:70%" />
                                    </div>
                                    <div class="service-desc">
                                        <h5>@item.mname</h5>
                                        <div class="divider-header"></div>
                                        @*<p>
                                                Ad denique euripidis signiferumque vim, iusto admodum quo cu. No tritani neglegentur mediocritatem
                                                duo.
                                            </p>*@
                                        <p>單價:@Convert.ToInt32(item.price_sale)</p>
                                        @if (Request.IsAuthenticated)
                                        {
                                            <p><a href="@Url.Action("AddCar")?mno=@item.mno" class="btn btn-skin">加入購物車</a></p>
                                        }
                                        else
                                        {
                                            <p></p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</section>

<section id="about" class="home-section color-dark bg-white">
    <div class="container marginbot-50">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="animatedParent">
                    <div class="section-heading text-center animated bounceInDown">
                        <h2 class="h-bold">關於</h2>
                        <div class="divider-header"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="container">


        <div class="row">


            <div class="col-lg-8 col-lg-offset-2 animatedParent">
                <div class="text-center">

                    @* 介紹 *@

                    <p>進口零食讓您在家，瀏覽現今時下最新、最流行的各式零食，不需要花費時間與體力去尋找傳說中的異國美食，輕鬆一鍵便能瀏覽世界各地超夯零食，沒有地區時差的問題，只要簡單步驟就能以優惠的價格獲得品嘗美味零食的幸福！</p>

                    @* 介紹結束 *@

                </div>
            </div>

        </div>
    </div>

</section>


