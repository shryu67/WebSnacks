@model IEnumerable<WebSnack.Models.z_bas_orders_d>
<script src="~/Scripts/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("select").click(function () {
            var id = $(this).prop("id").split("_")[1];
            //console.log(id);
            $("select#qty_" + id).change(function () {
                //alert($("#mno_" + id).val());
                var SCmno = $("#mno_" + id).val();
                var SCqty = $("select#qty_" + id).val();
                $.ajax({
                    type: "POST",
                    url: "/Home/UpdateCar",
                    data: { mno: SCmno, qty: SCqty },
                    success: function (data) {
                        $("#amo_" + id).text(data.amounts + " 元");
                    }
                })

            })
        });
    })
</script>
@{
    ViewBag.Title = "會員購物車清單";
}

<h2 class="home-section">會員購物車清單</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <tr>
        @if (User.IsInRole("administrator"))
        {
            <th>
                @Html.DisplayNameFor(model => model.mno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gno)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.gname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qty)
        </th>
        <th>
            小計
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.remark)
            </th>*@
        @if (User.IsInRole("administrator"))
        {
            <th>
                @Html.DisplayNameFor(model => model.mIsApproved)
            </th>
        }
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @if (User.IsInRole("administrator"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.mno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gno)
                </td>
            }
            @Html.Hidden("mno_" + item.rowid, item.gno)
            <td>
                @Html.DisplayFor(modelItem => item.gname)
            </td>
            <td>
                @Convert.ToInt32(item.price) 元
            </td>
            <td>
                數量
                <select id="qty_@item.rowid" name="qty_@item.rowid" class="">
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option value="@i" @(item.qty == i ? "selected" : "")>@i</option>
                    }
                </select>
            </td>
            <td id="amo_@item.rowid">
                @Convert.ToInt32(item.amounts) 元
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.remark)
                </td>*@
            @if (User.IsInRole("administrator"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.mIsApproved)
                </td>
            }
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.rowid }) |
                    @Html.ActionLink("Details", "Details", new { id = item.rowid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.rowid })*@
                <a href="@Url.Action("DeleteCar")?rowid=@item.rowid" class="btn btn-danger">取消訂購</a>
            </td>
        </tr>
    }

</table>

<form action="@Url.Action("ShoppingCar")" method="post">
    <div class="form-horizontal">
        <h4>填寫訂單收件人資料</h4>
        <hr />

        <div class="form-group">
            <span class="control-label col-md-2">收件人姓名</span>
            <div class="col-md-10">
                <input type="text" id="mReceiver" name="mReceiver" required="required" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">收件人信箱</span>
            <div class="col-md-10">
                <input type="text" id="mEmail" name="mEmail" required="required" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">收件人地址</span>
            <div class="col-md-10">
                <input type="text" id="mAddress" name="mAddress" required="required" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <input type="submit" value="確認結帳" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
