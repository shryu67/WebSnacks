@model WebSnack.Models.CVMGoodsType

@{
    ViewBag.Title = "商品列表";
}

<section id="service" class="home-section color-dark bg-gray">
    <h2 class="h-bold">商品列表</h2>

    <div class="row">
        <div class="col-xs-2">
            @foreach (var item in Model.gtype)
            {
                <p>@Html.ActionLink(item.mname, "GoodsList", new { typeid = item.rowid })</p>
            }
        </div>
        <div class="col-xs-10">
            <!-- Section: services -->
            <section id="service" class="home-section color-dark bg-gray">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2">
                            <div>
                                <div class="section-heading text-center">
                                    <h2 class="h-bold">@ViewBag.TypeName</h2>
                                    <div class="divider-header"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="text-center">
                    <div class="container">
                        <div class="row animatedParent">
                            @foreach (var item in Model.goods)
                            {
                                <div class="col-md-4 margintop-40">
                                    <div class="animated rotateInDownLeft">
                                        <div class="service-box">
                                            <div class="service-icon">
                                                <img src="~/img/goods/@item.mimg" style="width:70%" />
                                            </div>
                                            <div class="service-desc">
                                                <h5>@item.mname</h5>
                                                <div class="divider-header"></div>
                                                @*<p>
                                                        Ad denique euripidis signiferumque vim, iusto admodum quo cu. No tritani neglegentur mediocritatem
                                                        duo.
                                                    </p>*@
                                                <p>單價:@Convert.ToInt32(item.price_sale)</p>
                                                @if (Request.IsAuthenticated)
                                                {
                                                    <p><a href="@Url.Action("AddCar")?mno=@item.mno" class="btn btn-skin">加入購物車</a></p>
                                                }
                                                else
                                                {
                                                    <p></p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </section>
            <!-- /Section: services -->
        </div>
    </div>
</section>